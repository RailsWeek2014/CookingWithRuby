<%= bootstrap_form_for @meal_plan do |f| %>
	
	<%= f.select :recipe_id, visible_recipes.collect { |r| [ r.name, r.id ] }, prompt: true, label: t('meal_plan.planned_recipe') %>
	
	<%= render partial: 'date_picker', locals: {field_name: :date, :label => t('meal_plan.date'), form_helper: f } %>
	
	<%= f.select :daytime, ["breakfast", "lunch", "dinner"], prompt: true, label: t('meal_plan.daytime') %>
	
	<%= f.submit t('meal_plan.save')%>
<% end %>