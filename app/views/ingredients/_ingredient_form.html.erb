<%= bootstrap_form_for( @ingredient, url: 'javascript: recipe_form_helper.post();', layout: :horizontal, label_col: "col-sm-5", control_col: "col-sm-7") do |i_f| %>
	<%= render 'error_field' %>
	<%= i_f.text_field :name, label: t('ingredient.name'), validation: "notBlank"%><br />
	<%= i_f.label t('ingredient.nutrition_facts_for')%>
	
  <%= i_f.number_field :default_quantity, label: t('ingredient.default_quantity'), min: 0, validation: "notBlank" %>
  <%= i_f.select :unit_id, Unit.all.collect { |u| [u.name, u.id]}, hide_label: true, prompt: t('ingredient.default_unit') %>
	
	<%= i_f.number_field :kj, append: t("ingredient.kj"), label: t('ingredient.energy'), min: 0, validation: "notBlank" %>
	<%= i_f.number_field :carbohydrate, append: t("ingredient.g"), label: t('ingredient.carbohydrate'), step: 0.1, min: 0, validation: "notBlank"  %>
	<%= i_f.number_field :protein, append: t("ingredient.g"), label: t('ingredient.protein'), step: 0.1, min: 0, validation: "notBlank"  %>
	<%= i_f.number_field :fat, append: t("ingredient.g"), label: t('ingredient.fat'), step: 0.1, min: 0, validation: "notBlank"  %>
	<%= i_f.number_field :roughage, append: t("ingredient.g"), label: t('ingredient.roughage'), step: 0.1, min: 0, validation: "notBlank"  %>
	
	<%= i_f.submit t('ingredient.submit'), class: "btn btn-success"%>
<% end %>