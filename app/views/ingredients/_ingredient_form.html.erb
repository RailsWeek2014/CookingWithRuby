<%= bootstrap_form_for( @ingredient, url: 'javascript: recipe_form_helper.post();', layout: :horizontal, label_col: "col-sm-5", control_col: "col-sm-7") do |i_f| %>
	<%= i_f.text_field :name, label: t('ingredient.name')%><br />
	<%= i_f.label t('ingredient.nutrition_facts_for')%>
	
  <%= i_f.number_field :default_quantity, label: t('ingredient.default_quantity') %>
  <%= i_f.select :unit_id, Unit.all.collect { |u| [u.name, u.id]}, hide_label: true, prompt: t('ingredient.default_unit') %>
	
	<%= i_f.number_field :kj, append: t("ingredient.kj"), label: t('ingredient.energy') %>
	<%= i_f.number_field :carbohydrate, append: t("ingredient.g"), label: t('ingredient.carbohydrate') %>
	<%= i_f.number_field :protein, append: t("ingredient.g"), label: t('ingredient.protein') %>
	<%= i_f.number_field :fat, append: t("ingredient.g"), label: t('ingredient.fat') %>
	<%= i_f.number_field :roughage, append: t("ingredient.g"), label: t('ingredient.roughage') %>
	
	<%= i_f.submit t('ingredient.submit'), class: "btn btn-success"%>
<% end %>