<%= bootstrap_form_for @activity, url: 'javascript: activity_form_helper.post();' do |f| %>
  <%= render 'error_field' %>
	<%= f.text_field :name, label: t( 'activity.name' ), validation: "notBlank" %>
	<%= f.number_field :kj, label: t( 'activity.kj' ), min: 0, validation: "notBlank", append: t("activity.kj") %>
	
	<%= f.submit t('activity.submit'), class: "btn btn-success" %>
<% end %>
