<tr style="height: 50px;"
  <% case user.role%>
  <% when 'm'%>
    class="info"
  <% when 'a'%>
    class="success"
  <% end %> 
  >
  <td style="width: 50px;"><img src="<%= user.picture %>" class="img-circle" style="width: 35px; height:auto"></td>
  <td style="width: auto"><%= user.name %></td>
  <td style="width: 350px">
    <div class="btn-group">
    <button class="btn btn-xs btn-default" disabled>Grand</button>
      <a data-method="patch" class="btn btn-xs btn-default btn-success" <%unless can? :grant_admin, User%>disabled<% end %> href="/admin/users/<%=user.id%>/grand/a">Admin</a>
      <a data-method="patch" class="btn btn-xs btn-default btn-info" <%unless can? :grant_moderator, User%>disabled<% end %>  href="/admin/users/<%=user.id%>/grand/m">Moderator</a>    
      <a data-method="patch" class="btn btn-xs btn-default btn-warning" <%unless can? :grant_user, User%>disabled <% end %> href="/admin/users/<%=user.id%>/grand/u">User</a>    
    <button class="btn btn-xs btn-default" disabled>Rights</button>
  </td>
