<%= bootstrap_form_for(User.new, url: new_user_session_path) do |f| %>
	<div><%= f.email_field :email, autofocus: true %></div>
	
	<div><%= f.password_field :password, autocomplete: "off" %></div>
	
	<div><%= f.check_box :remember_me, hide_label: true %></div>
	
	<div class="btn-group">
	  <%= f.submit "Log in", class: "btn btn-xs btn-success" %>
    <%= link_to t('login.sign_up'), new_user_registration_path, class: "btn btn-xs btn-info" %>
  </div>
  <br />  
  <br />  
  <%= link_to t('login.forgot_your_password'), new_user_password_path, class: "btn btn-xs btn-danger" %>
	
<% end %>