<%= bootstrap_form_for(User.new, url: new_user_session_path) do |f| %>
	<div><%= f.email_field :email, autofocus: true %></div>
	
	<div><%= f.password_field :password, autocomplete: "off" %></div>
	
	<div><%= f.check_box :remember_me, hide_label: true %></div>
	
	<div><%= f.submit "Log in" %></div>
	
	<%= render 'users/shared/links' %>
	
	<% end %>