<%= bootstrap_form_for(@user, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div>
  <%= f.hidden_field :uid %>
  <%= f.hidden_field :provider %>
  <%= f.hidden_field :picture %>
  <%= f.email_field :email, autofocus: true %></div>

  <div>
  <%= f.text_field :name %></div>

  <div><%= f.label :password %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
    <%= f.password_field :password, hide_label: true, autocomplete: "off" %></div>

  <div>
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div>
  
  <div>
    <%= f.form_group :sex do %>
      <%= f.radio_button :sex, 'm', label: "Mann", inline: true, checked: true %>
      <%= f.radio_button :sex, 'f', label: "Frau", inline: true %>
    <% end %>
  </div>
  
  <%= render partial: 'date_picker', locals: {field_name: :birth_date, :label => :birth_date, form_helper: f } %>

  <div>
    <%= f.number_field :weight %>
  </div>

  <div><%= f.submit "Sign up" %></div>
<% end %>