   <div class="modal-dialog <% if defined? size %> modal-<%= size %><% end %>">
     <div class="modal-content">

       <div class="modal-header">
         <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
         <h4 class="modal-title" id="myModalLabel"><% if defined? headline %><%= headline %><% else %><%= t('unknown') %><%  end %></h4>
       </div>
       <div class="modal-body">
        	<%= yield%>
       </div>
     </div><!-- /.modal-content -->
   </div><!-- /.modal-dialog -->
 </div>