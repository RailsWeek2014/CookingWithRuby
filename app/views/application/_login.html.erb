<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">
      <% if user_signed_in? %>
        <%= t('application.welcome') + ', ' + current_user.name %>
      <% else %>
        <%= t('login.login')%>
      <% end %>
    </h3>
  </div>
  <div class="panel-body">
    <center>
      <% if user_signed_in? %>
        <%= render 'users/sessions/logged_in' %>
      <% else %>
        <%= render 'users/sessions/log_in' %>
      <% end%>
    </center>
  </div>
</div>