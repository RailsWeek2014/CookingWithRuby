<!DOCTYPE html>
<html>
  <head>
    <title>Cooking with Ruby - <%= @title || 'Unknown'%></title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render 'navbar'%>
    <div class="col-sm-2" style="margin-top: 65px">
      <%= render 'login'%>
      <br/>
      <%= render 'navigation'%>
    </div>
    <div class="col-sm-9" style="margin-top: 65px">
    	<% if flash[:notice] %>
    		<%= flash[:notice] %>
    	<% end %>
    	<% if flash[:alert] %>
    		<%= flash[:alert] %>
    	<% end %>
    	
    	
    <%= yield %>
    </div>
  </body>
</html>
